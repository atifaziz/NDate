{
  "version": "1.0.0-*",
  "title": "Date Type for .NET",
  "description": ".NET Standard library that provides a Date value type for times when you need to strictly represent a date without any time component.",
  "authors": [ "Atif Aziz" ],
  "copyright": "Copyright \u00a9 2014 Atif Aziz. All rights reserved.",

  "packOptions": {
    "projectUrl": "https://github.com/atifaziz/NDate",
    "licenseUrl": "http://www.apache.org/licenses/LICENSE-2.0",
    "owners": [ "Atif Aziz" ],
    "tags": [ "date", "time", "datetime" ],
    "files": {
      "include": "../COPYING.txt"
    }
  },

  "buildOptions": {
    "debugType": "portable",
    "define": [
      "NDATE_PUBLIC"
    ]
  },

  "frameworks": {
    "net20": {
      "buildOptions": {
        "define": [
          "NDATE_SERIALIZABLE",
          "NDATE_CONVERTIBLE"
        ]
      }
    },
    "net45": {
      "buildOptions": {
        "define": [
          "NDATE_SERIALIZABLE",
          "NDATE_CONVERTIBLE",
          "NDATE_CONTRACTS"
        ]
      }
    },
    "netstandard1.0": {
      "dependencies": {
        "System.Diagnostics.Contracts": "4.0.1",
        "System.Net.Primitives": "4.0.11"
      },
      "buildOptions": {
        "define": [
          "NDATE_CONTRACTS"
        ]
      }
    },
    "netstandard1.3": {
      "dependencies": {
        "System.Diagnostics.Contracts": "4.0.1",
        "System.Net.Primitives": "4.0.11"
      },
      "buildOptions": {
        "define": [
          "NDATE_CONVERTIBLE",
          "NDATE_CONTRACTS"
        ]
      }
    }
  }
}
